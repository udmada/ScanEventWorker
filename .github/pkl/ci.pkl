amends "@com.github.actions/Workflow.pkl"
import "@com.github.actions/Step.pkl"

import "common.pkl"

name = "CI"

jobs {
  ["build"] {
    `runs-on` = "ubuntu-slim"
    steps = (common.steps) {
      (Step) {
        name = "Verify pkl gen is up to date"
        run = "mise run pkl:gen && git diff --exit-code .github/"
      }
      (Step) {
        name = "Build"
        run = "mise run build"
      }
    }
  }
  ["test"] {
    `runs-on` = "ubuntu-slim"
    needs = "build"
    steps = (common.steps) {
      (Step) {
        name = "Test"
        run = "mise run test"
      }
    }
  }
  ["catch-AOT-specific-issues"] {
    `runs-on` = "ubuntu-latest"
    needs = "build"
    steps = (common.steps) {
      (Step) {
        name = "AOT Publish"
        run = "mise run publish"
      }
    }
  }
}
